<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group6a_hw03.group6a_hw03" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Trivia_Activity"
            android:label="@string/title_activity_creaute__question" >
            <intent-filter>
                <action android:name="com.group6a_hw03.group6a_hw03.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Results_Activity"
            android:label="@string/title_activity_results_" >
        </activity>
        <activity
            android:name=".Create_Single_Question"
            android:label="@string/title_activity_create__single__question" >
            <intent-filter>
                <action android:name="com.group6a_hw03.group6a_hw03.intent.action.CREATE_QUESTION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
